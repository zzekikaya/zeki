@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Content/Angular/employee/Service.js"></script>
<script src="~/Content/Angular/employee/ControllerEmployee.js"></script>
<div ng-controller="ControllerEmployee">

    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link href="~/Scripts/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/plugins/datatables/jquery.dataTables.min.js"></script>
    <h1>Employee Details Page</h1>

    <br />

    <input type="button" class="btnAdd" value=" Add Employee" ng-click="AddEmployeeDiv()" />


    <div class="divList">
        <p class="divHead">Kullanıcı Listesi</p>
        <table cellpadding="12" class="table table-bordered table-hover">
            <tr>
                <td><b>ID</b></td>
                <td><b>Adı</b></td>
                <td><b>Soyadı</b></td>
                <td><b>Kullanıcı Adı</b></td>
                <td><b>Email</b></td>
                <td><b>Adres</b></td>
                <td><b>Tarih</b></td>
            </tr>
            <tr ng-repeat="employee in employees">
                <td>{{employee.ID}}
                </td>
                <td>{{employee.FirstName}}
                </td>
                <td>{{employee.LastName}}
                </td>
                <td>{{employee.UserName}}
                </td>
                <td>{{employee.Email}}
                </td>
                <td>{{employee.Address}}
                </td>
                <td>{{employee.AddedDate | convertDate | date:dd.MM.yyyy}}
                </td>
                <td>
                    <span ng-click="editEmployee(employee)" class="btnAdd">Edit</span>
                    <span ng-click="deleteEmployee(employee)" class="btnRed">Delete</span>
                </td>
            </tr>
        </table>
    </div>

    <br ng-show="divEmployee">
    <p class="divHead">{{Action}} Employee</p>

    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">User List</h3>
        </div>
        <form class="form-horizontal">
            <div class="form-group">
                <label for="Id" class="col-sm-2 control-label">ID</label>
                <div class="col-sm-10">
                    <input type="text" ng-model="employee.ID" disabled="disabled" id="id" class="col-xs-3">
                </div>
            </div>
            <div class="form-group">
                <label for="FirstName" class="col-sm-2 control-label">FirstName</label>
                <div class="col-sm-10">
                    <input type="text" class="col-sm-2" ng-model="employee.FirstName" id="FirstName" class="col-xs-3">
                </div>
            </div>
            <div class="form-group">
                <label for="LastName" class="col-sm-2 control-label">LastName</label>
                <div class="col-sm-10">
                    <input type="text" class="col-sm-2" ng-model="employee.LastName" id="LastName" class="col-xs-3">
                </div>
            </div>

            <div class="form-group">
                <label for="UserName" class="col-sm-2 control-label">UserName</label>
                <div class="col-sm-10">
                    <input type="text" class="col-sm-2" ng-model="employee.UserName" id="UserName" class="col-xs-3">
                </div>
            </div>
            <div class="form-group">
                <label for="Address" class="col-sm-2 control-label">Address</label>
                <div class="col-sm-10">
                    <input type="text" class="col-sm-2" ng-model="employee.Address" id="Address" class="col-xs-3">
                </div>
            </div>
            <div class="form-group">
                <label for="Email" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="col-sm-2" ng-model="employee.Email" id="Email" placeholder="Enter email" class="col-xs-3">
                </div>
            </div>
            <div class="form-group">
                <label for="Password" class="col-sm-2 control-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="col-sm-2" ng-model="employee.Password" id="Password" placeholder="Enter Password" class="col-xs-3">
                </div>
            </div>
            <div class="box-footer">
                @* <button type="submit" class="btn btn-default">Cancel</button>*@
                <button type="submit" ng-click="AddUpdateEmployee(employee)" class="btn btn-info pull-left">Kaydet</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    @*<input type="button" class="btnAdd" value="Save" ng-click="AddUpdateEmployee(employee)" />*@



    <button ng-click="toggleModal(employee)" class="btn btn-default">Open modal</button>

    <modal title="Login form" visible="showModal">
 

    <form role="form">
         <div class="form-group">
                <label for="Id" >ID</label>                
                    <input type="text" class="form-control" ng-model="employee.ID" disabled="disabled" id="id">                 
            </div>
         <div class="form-group">
                <label for="FirstName" >FirstName</label>               
                    <input type="text" class="form-control" ng-model="employee.FirstName" id="FirstName">                
            </div>
           <div class="form-group">
                <label for="LastName" >LastName</label>               
                    <input type="text" class="form-control" ng-model="employee.LastName" id="LastName">                
            </div>
             <div class="form-group">
                <label for="UserName" >UserName</label>               
                    <input type="text" class="form-control" ng-model="employee.UserName" id="UserName">                
            </div>
          <div class="form-group">
                <label for="Address" >Address</label>               
                    <input type="text" class="form-control" ng-model="employee.Address" id="Address">                
            </div>
        <div class="form-group">
                <label for="AddedDate" >AddedDate</label>               
                    <input type="text" class="form-control" data-inputmask="'alias': 'mm/dd/yyyy'" ng-model="employee.AddedDate" data-mask id="AddedDate">                
            </div>
        
          <div class="form-group">
                <label for="Email" >Email</label>               
                    <input type="text" class="form-control" ng-model="employee.Email" id="Email">                
            </div>
      <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="Password"  />
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" placeholder="Password" />
      </div>
           <div class="form-group">
        
       <button type="submit" ng-click="AddUpdateEmployee(employee)" class="btn btn-info pull-left">Kaydet</button>
      </div>
         
    </form>
  </modal>
</div>
